<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="albionSCRAPER.MainPage"
             Title="Wyszukiwarka przedmiotów">

    <StackLayout Padding="10" Spacing="10">

        <!-- Picker: Kategoria -->
        <Label Text="Kategoria:" FontSize="16"/>
        <Picker ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory}"
                Title="Wybierz kategorię" />

        <!-- Picker: Subkategoria -->
        <Label Text="Subkategoria:" FontSize="16"/>
        <Picker ItemsSource="{Binding Subcategories}"
                SelectedItem="{Binding SelectedSubcategory}"
                Title="Wybierz subkategorię" />

        <!-- Picker: Frakcja / Miasto -->
        <Label Text="Frakcja / Miasto:" FontSize="16"/>
        <Picker ItemsSource="{Binding Factions}"
                SelectedItem="{Binding SelectedFaction}"
                Title="Wybierz frakcję" />

        <!-- Lista wyników -->
        <Label Text="Wyniki:" FontSize="16" Margin="0,10,0,0"/>
        <ListView ItemsSource="{Binding FilteredItems}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding LocalizedNames[PL-PL]}"
                              Detail="{Binding UniqueName}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>